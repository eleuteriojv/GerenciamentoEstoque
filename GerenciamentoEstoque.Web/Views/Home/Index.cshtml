@{
    ViewData["Title"] = "Início";
}

<div class="text-center">
    <h1 class="display-4">Gerenciamento de Estoque</h1>
    <hr />
    <div class="align-content-center" style="display: flex; flex-direction:row;align-content: center; justify-content: space-evenly; margin: 10px;">
        <div class="card text-center" style="width: 17rem; ">
            <div class="card-body">
                <h5 class="card-title">Produtos</h5>
                <hr>
                <p class="card-text">Aqui você terá a autonomia de criar, deletar e atualizar todos os produtos.</p>
                <br>
                <div class="card-footer">
                    <a asp-controller="Produto" asp-action="Index" class="btn btn-success">Acessar</a>
                </div>
            </div>
        </div>
        <div class="card text-center" style="width: 17rem; ">
            <div class="card-body">
                <h5 class="card-title">Estoque</h5>
                <hr>
                <p class="card-text">Aqui você terá a autonomia de criar, deletar e atualizar todos os itens do estoque.</p>
                <br>
                <div class="card-footer">
                    <a asp-controller="ItemEstoque" asp-action="Index" class="btn btn-success">Acessar</a>
                </div>
            </div>
        </div>
        <div class="card text-center" style="width: 17rem; ">
            <div class="card-body">
                <h5 class="card-title">Loja</h5>
                <hr>
                <p class="card-text">Aqui você terá a autonomia de criar, deletar e atualizar as lojas cadastradas.</p>
                <br>
                <div class="card-footer">
                    <a asp-controller="Loja" asp-action="Index" class="btn btn-success">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</div>
