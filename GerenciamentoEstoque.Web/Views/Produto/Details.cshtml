@model GerenciamentoEstoque.Web.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes";
}


<div>
    <h4>Detalhes do Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco):
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <input type="button" class="btn btn-danger" value="Voltar" onclick="history.back()">
</div>