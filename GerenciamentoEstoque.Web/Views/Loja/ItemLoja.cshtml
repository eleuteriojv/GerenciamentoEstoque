@model IEnumerable<GerenciamentoEstoque.Web.ViewModels.ItemEstoqueViewModel>

@{
    ViewData["Title"] = "ItemLoja";
}

<h1 class="text-center">Produtos da Loja </h1>
<hr />
<p class="text-center">
    <a class="btn btn-success" asp-action="Create" asp-controller="ItemEstoque">Adicionar um Produto</a>
</p>
<table id="table" class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produtos.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produtos.Nome)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Produtos.Preco)
                </td>
                <td>

                    <a class="btn btn-success" asp-action="Edit" asp-controller="Produto" asp-route-id="@item.ProdutoId">Editar</a>
                    <a class="btn btn-warning" asp-action="Details" asp-controller="Produto" asp-route-id="@item.ProdutoId">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Produto" asp-route-id="@item.ProdutoId">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "oLanguage": {
                    "sSearch": "",
                    "sSearchPlaceholder": "Pesquisar..."
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.3/i18n/pt-BR.json',
                }
            });
        });
    </script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/dataTables.jqueryui.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/dataTables.jqueryui.min.js"></script>
}
